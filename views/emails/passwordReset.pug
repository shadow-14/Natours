extends baseEmail

block content
    p Hi #{firstName},
        p You are receiving this email because you (or someone else) has requested a password reset for your account.
        p Please click on the following link to reset your password:#{url}
        table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
                tr
                    td(align='left')
                        table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                            tbody
                                tr
                                    td
                                        a(href=`${url}`, target='_blank') Reset Password
        p If you did not request this, please ignore this email and your password will remain unchanged
        